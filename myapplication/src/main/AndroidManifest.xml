<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myapplication.SquareTextView_Activity"
            />
        <activity
            android:name="com.example.myapplication.LightningTextView_Activity"
            />

        <activity
            android:name="com.example.myapplication.TopBar_Activity"
            
            />
        <activity
            android:name="com.example.myapplication.CircleProgress_Activity"
            />
        <activity
            android:name="com.example.myapplication.Volume_Activity"
            />

        <activity
            android:name="com.example.myapplication.MyScrollView_Activity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.example.myapplication.AnimatorTest_Activity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>